{
  "name": "assuronline-monorepo",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install -ws",
    "dev": "concurrently -n backend,frontend -c blue,green \"npm:dev --workspace backend\" \"npm:start --workspace frontend\"",
    "start": "concurrently -n backend,frontend -c blue,green \"npm:start --workspace backend\" \"npm:start --workspace frontend\"",
    "build": "npm run build --workspace frontend",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "echo 'No root tests'",
    "docx": "node scripts/generate-docx.js",
    "verify": "node scripts/verify-installation.js",
    "test:workflow": "node scripts/test-complete-workflow.js",
    "seed:users": "node scripts/create-test-accounts.js",
    "setup": "npm run verify && npm run install:all && echo 'Setup completed! Run npm run dev to start the application.'"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "docx": "^9.5.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.545.0",
    "marked": "^16.3.0",
    "node-fetch": "^3.3.2"
  }
}